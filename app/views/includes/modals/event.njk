<div class="modal fade" id="event">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
        <h2 class="modal-title text-center">Create Event</h4>
      </div>
        <form action="/events/create" class="form-horizontal" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <label for="name" class="col-md-2 control-label">Name</label>
              <div class="col-md-10">
                <input type="text" class="form-control" id="name" placeholder="Event name">
              </div>
            </div>
            <div class="form-group">
              <label for="description" class="col-md-2 control-label">Description</label>
              <div class="col-md-10">
                <textarea class="form-control" id="description" placeholder="Event description"></textarea>
              </div>
            </div>
            <div class="form-group">
              <label for="details" class="col-md-2 control-label">Details</label>
              <div class="col-md-5">
                <select name="registration" id="details" class="form-control">
                  <option selected disabled>Select registration</option>
                  {% for registrationType in registrationTypes %}
                    <option value="{{registrationType}}">{{ registrationType }}</option>
                  {% endfor %}
                </select>
              </div>
              <div class="col-md-5">
                <select name="ageGroup" id="details" class="form-control">
                  <option value="" selected disabled>Select age group</option>
                  {% for ageGroup in ageGroups %}
                    <option value="{{ageGroup}}">{{ ageGroup }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-5 col-md-offset-2">
                <select name="park" id="details" class="form-control">
                  <option selected disabled>Select Park</option>
                  <option value="None">None</option>
                  {% for park in parks %}
                    <option value="{{park}}">{{ park }}</option>
                  {% endfor %}
                </select>
              </div>
              <div class="col-md-5">
                <select name="isIndoors" class="form-control">
                  <option selected disabled>Select indoor/outdoors</option>
                  <option value="true">Indoors</option>
                  <option value="false">Outdoors</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="address" class="col-md-2 control-label">Address</label>
              <div class="col-md-10">
                <input type="text" class="form-control" id="address" placeholder="Event address">
              </div>
            </div>
            <div class="form-group">
              <label for="organization" class="col-md-2 control-label">Organization</label>
              <div class="col-md-10">
                <input type="text" class="form-control" id="organization" placeholder="Organization name">
              </div>
            </div>
            <div class="form-group">
              <label for="contact" class="col-md-2 control-label">Contact</label>
              <div class="col-md-5">
                <input type="text" class="form-control" id="contact" placeholder="Primary contact name">
              </div>
              <div class="col-md-5">
                <input type="text" class="form-control" data-mask="(999) 999-9999" id="contact" placeholder="Primary contact phone">
              </div>
            </div>
            <div class="form-group">
              <label for="date" class="col-md-2 control-label">Date</label>
              <div class="col-md-5">
                <input type="text" class="form-control start-date" id="date" placeholder="Start date">
              </div>
              <div class="col-md-5">
                <input type="text" class="form-control end-date" id="date" placeholder="Start date">
              </div>
            </div>
            <div class="form-group">
              <label for="time" class="col-md-2 control-label">Time</label>
              <div class="col-md-5">
                <input type="text" class="form-control start-time" id="time" placeholder="End time">
              </div>
              <div class="col-md-5">
                <input type="text" class="form-control end-time" id="time" placeholder="End time">
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button class="btn btn-primary">Create Event</button>
          </div>
        </form>
    </div>
  </div>
</div>

{% block styles %}
<style>
.pac-container {
  z-index: 2051 !important;
}
.popover {
  z-index: 2051 !important;
}
</style>
{% endblock%}
