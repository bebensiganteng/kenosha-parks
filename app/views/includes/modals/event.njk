<div class="modal fade" id="event">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
        <h2 class="modal-title text-center">Create Event</h4>
      </div>
        <form action="/events/create" class="form-horizontal" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <label for="name" class="col-md-2 control-label">Name</label>
              <div class="col-md-10">
                <input type="text" class="form-control" id="name" placeholder="Event name" name="name" required>
              </div>
            </div>
            <div class="form-group">
              <label for="description" class="col-md-2 control-label">Description</label>
              <div class="col-md-10">
                <textarea class="form-control" id="description" placeholder="Event description" name="description" required></textarea>
              </div>
            </div>

            <div class="form-group">
              <label for="startDateTime" class="col-md-2 control-label">Start</label>
              <div class="col-md-10">
                <input type="text" class="form-control" id="startDateTime" placeholder="Start date and time" name="startDateTime" required>
              </div>
            </div>

            <div class="form-group">
              <label for="endDateTime" class="col-md-2 control-label">End</label>
              <div class="col-md-10">
                <input type="text" class="form-control" id="endDateTime" placeholder="End date and time" name="endDateTime" required>
              </div>
            </div>

            <div class="form-group">
              <label for="registration" class="col-md-2 control-label">Registration</label>
              <div class="col-md-10">
                <select name="registration" id="registration" class="form-control" name="registration" required>
                  <option value="" selected disabled>Select registration</option>
                  {% for registrationType in registrationTypes %}
                    <option value="{{registrationType}}">{{ registrationType }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="ageGroup" class="col-md-2 control-label">Age Group</label>
              <div class="col-md-10">
                <select name="ageGroup" id="ageGroup" class="form-control" name="ageGroup" required>
                  <option selected disabled>Select age group</option>
                  {% for ageGroup in ageGroups %}
                    <option value="{{ageGroup}}">{{ ageGroup }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="park" class="col-md-2 control-label">Park</label>
              <div class="col-md-10">
                <select name="park" id="park" class="form-control" name="park" required>
                  <option selected disabled>Select park</option>
                  {% for park in parks %}
                    <option value="{{park}}">{{ park }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="address" class="col-md-2 control-label">Address</label>
              <div class="col-md-10">
                <input type="text" class="form-control" id="address" placeholder="Event address" name="address" required>
              </div>
            </div>
            <div class="form-group">
              <label for="venue" class="col-md-2 control-label">Venue</label>
              <div class="col-md-10">
                <select name="venue" id="park" class="form-control" name="venue" required>
                  <option selected disabled>Indoors or outdoors</option>
                  <option value="indoors">Indoors</option>
                  <option value="outdoors">Outdoors</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="price" class="col-md-2 control-label">Price</label>
              <div class="col-md-10">
                <input type="number" min="0" step="any" class="form-control" id="price" placeholder="9.99" name="price" required>
              </div>
            </div>
            <div class="form-group">
              <label for="organization" class="col-md-2 control-label">Organization</label>
              <div class="col-md-10">
                <input type="text" class="form-control" id="organization" placeholder="Organization name" name="organization" required>
              </div>
            </div>
            <div class="form-group">
              <label for="contact" class="col-md-2 control-label">Contact</label>
              <div class="col-md-5">
                <input type="text" class="form-control" id="contact" placeholder="Primary contact name" name="contactName" required>
              </div>
              <div class="col-md-5">
                <input type="text" class="form-control" data-mask="(999) 999-9999" id="contact" placeholder="Primary contact phone" name="contactNumber" required>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button class="btn btn-primary">Create Event</button>
          </div>
        </form>
    </div>
  </div>
</div>

{% block styles %}
<style>
.pac-container {
  z-index: 2051 !important;
}
</style>
{% endblock%}
