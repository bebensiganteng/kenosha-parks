<div class="modal fade" id="notification">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
        <h2 class="modal-title text-center">Compose Message</h2>
      </div>
      <form action="/notifications/create" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" placeholder="Enter a title" name="title" required>
          </div>
          <div class="form-group">
            <label for="body">Message Text</label>
            <input type="text" class="form-control" id="body" placeholder="Enter a message" name="body" required>
          </div>
          <div class="form-group">
            <label for="topic">Topic</label>
            {% if topics.length %}
              <select name="topic" class="form-control" required>
                <option selected disabled>Select a topic</option>
                {% for topic in topics %}
                  <option value="{{ topic.name }}">{{ topic.readableName }}</option>
                {% endfor %}
              </select>
            {% else %}
              <div class="alert alert-info">
                <p>
                  <i class="fa fa-info-circle" style="padding-right: 10px;"></i> This project does not have any topics.
                </p>
              </div>
            {% endif %}
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-info">Send Message</button>
        </div>
      </form>
    </div>
  </div>
</div>
